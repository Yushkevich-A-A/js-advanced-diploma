{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {        
        "no-restricted-syntax": [
        "error",
        "LabeledStatement",
        "WithStatement"
    ],
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "no-mixed-operators": "off",
    "no-nested-ternary": "off",
    "no-new": "off",
    "array-callback-return": "off",
    "no-continue": "off",
    "class-methods-use-this": "off",
    "no-param-reassign": "off",
    "no-return-assign": "off",
    "max-len": "off",
    "no-alert": "off"
    }
}
